<main>
  <h1>{{cube.name}}</h1>
  <img class="cube" src={{cube.imageUrl}} />
  <div class="details">
    <p><span>Description:</span>
      {{cube.description}}</p>
    <p><span>Difficulty level:</span> {{cube.difficulty}}</p>
    <a class="btn" href="/cubes/edit/{{cube._id}}">Edit</a>
    <a class="btn" href="/cubes/delete/{{cube._id}}">Delete</a>
    <a class="btn" href="/cubes/attach-accessory/{{cube._id}}">Attach Accessory</a>
    <a class="btn" href="/">Back</a>
  </div>
  <h2>Accessories</h2>
  <div class="accessories">
    {{#if cube.accessories.length}}
      {{#each cube.accessories}}
        {{>accessory}}
      {{/each}}
    {{else}}
      <h3 class="italic">This cube has no accessories yet...</h3>
    {{/if}}
  </div>
</main>